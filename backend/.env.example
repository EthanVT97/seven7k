# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/seven7k

# Redis Configuration
REDIS_URL=redis://localhost:6379
QUEUE_PREFIX=seven7k

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=24h

# Message Encryption
ENCRYPTION_KEY=your_encryption_key_here
ENCRYPTION_SALT=your_encryption_salt_here

# WhatsApp Configuration
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_API_SECRET=your_whatsapp_api_secret
WHATSAPP_PHONE_NUMBER=your_whatsapp_phone_number

# Facebook Messenger Configuration
FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_page_access_token
FACEBOOK_WEBHOOK_VERIFY_TOKEN=your_facebook_webhook_verify_token

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Line Configuration
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token
LINE_CHANNEL_SECRET=your_line_channel_secret

# Viber Configuration
VIBER_AUTH_TOKEN=your_viber_auth_token
VIBER_WEBHOOK_URL=your_viber_webhook_url

# File Upload Configuration
MAX_FILE_SIZE=10485760 # 10MB in bytes
ALLOWED_FILE_TYPES=image/*,video/*,audio/*,application/pdf

# CDN Configuration (AWS S3)
CDN_REGION=us-east-1
CDN_ACCESS_KEY=your_aws_access_key
CDN_SECRET_KEY=your_aws_secret_key
CDN_BUCKET_NAME=your_s3_bucket_name
CDN_BASE_URL=https://your-cdn-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Message Queue Configuration
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=60000 # 1 minute in milliseconds
QUEUE_BATCH_SIZE=10